{
  "name": "good_crash_site",
  "version": "1.0.0",
  "description": "Personal web site",
  "keywords": [],
  "author": "Aleksandr Lipovskiy",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/GoodCrash/good_crash_site.git"
  },
  "scripts": {
    "serve": "webpack-dev-server --config webpack.dev.js",
    "test": "jest",
    "build": "webpack --config webpack.prod.js",
    "lint": "eslint --ext .js,.json, src tests --ignore-pattern '!.eslintrc.js'",
    "lint-fix": "eslint --ext .js,.json, src tests --fix --ignore-pattern '!.eslintrc.js'",
    "sass-lint": "sass-lint -c .sass-lint.yml",
    "prettier": "prettier --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css}": [
      "npm run prettier",
      "npm run lint-fix",
      "git add"
    ],
    "*.{scss}": [
      "npm run prettier",
      "npm run sass-lint",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.7.1",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^3.0.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jest": "^22.5.0",
    "eslint-plugin-json": "^1.4.0",
    "eslint-plugin-prettier": "^3.0.1",
    "file-loader": "^4.0.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.3.1",
    "jest": "^24.7.1",
    "lint-staged": "^9.1.0",
    "mini-css-extract-plugin": "^0.7.0",
    "node-sass": "^4.13.1",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "prettier": "^1.18.2",
    "pug": "^2.0.3",
    "pug-loader": "^2.4.0",
    "sass-lint": "^1.13.1",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "terser-webpack-plugin": "^1.3.0",
    "webpack": "^4.35.3",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "^3.7.2",
    "webpack-merge": "^4.2.1"
  },
  "dependencies": {
    "autoprefixer": "^9.6.1",
    "browserslist": "^4.6.6",
    "postcss-loader": "^3.0.0"
  }
}
